{
  "name": "insites-ui",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Tomasz Marciniak <tmarciniakm@gmail.com>",
  "homepage": "https://github.com/insites-co/insites-ui",
  "main": "dist/index.js",
  "scripts": {
    "test": "react-scripts test --silent",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "dist": "tsc --noEmit false && copyfiles -u 1 ./src/**/*.svg dist",
    "lint": "prettier",
    "release": "npm run dist && np"
  },
  "dependencies": {
    "@types/node": "^16.3.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.0.1",
    "@types/styled-system": "^5.1.9",
    "polished": "^3.5.2",
    "react-scripts": "3.4.1",
    "styled-reset": "^4.1.4",
    "styled-system": "^5.1.5",
    "typeface-inter": "^3.12.0",
    "typescript": "~3.8.3"
  },
  "peerDependencies": {
    "react": ">16.8.0",
    "react-dom": ">16.8.0",
    "styled-components": ">5.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.1.0",
    "@types/jest": "^25.2.1",
    "copyfiles": "^2.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "np": "^6.2.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "16.13.1",
    "storybook-chromatic": "^3.5.5",
    "styled-components": "^5.1.0",
    "ts-loader": "^7.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}",
      "!src/*",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "np": {
    "yarn": true
  }
}
